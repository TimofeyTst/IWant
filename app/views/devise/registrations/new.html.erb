<div class="form">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :username, autocomplete: "username", required: "" %>
      <%= f.label :username %>
      <span></span>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: "" %>
      <%= f.label :email %>
      <span></span>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "password", required: true %>
      <%= f.label :password %>
      <span></span>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "confirm-password", required: "" %>
      <%= f.label :password_confirmation %>
      <span></span>
    </div>

    <div class="form-button">
      <%= f.submit "Sign up", class: "button"%>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
