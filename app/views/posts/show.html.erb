<div class="container smart">
    <div class="avatar">
        <% if @post.user.avatar.attached? %>
            <%= image_tag @post.user.avatar, class: "avatar-mini"%>
        <% else %>
            <%= image_tag 'default_avatar.jpg',class: "avatar-mini" %>
        <% end %>
    </div>
    <div class="name">
        <%= @post.user.username.capitalize %> book  
    </div>
</div>

<%= render @post %>

<div class="line">
  <%= link_to "Edit this post", edit_post_path(@post), class: 'button' %>
  <%= link_to "Back to posts", posts_path, class: 'button' %>
</div>  
<div class="line">
  <%= button_to "Destroy this post", @post, method: :delete, class: 'button delete' %>
</div>
