<header>
      <nav class="navbar">
        <div class="nav-brand">
          <a href="/"><%= image_tag('logo.png') %></a>
        </div>
        <div class="nav-pages">
          <div>
            <%= link_to 'Add post', '/', class: 'nav-link' %>
          </div>
          <div>
            <%= link_to 'Actions', '/', class: 'nav-link' %>
          </div>
          <div>
            <%= link_to 'Messages', '/', class: 'nav-link' %>
          </div>
          <% if user_signed_in? %>
            <% if current_user.avatar.attached? %>
              <div> <!-- edit_user_registration_path -->
                <%= link_to (image_tag(current_user.avatar, class: 'avatar-link')), profile_path(current_user), class: 'nav-link' %>
              </div>
            <% else %>
              <div>
                <%= link_to 'Profile', profile_path(current_user), class: 'nav-link' %>
              </div>
            <% end %>
          <% else %>
            <div>
              <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
            </div>
          <% end %>
        </div>
      </nav>
</header>