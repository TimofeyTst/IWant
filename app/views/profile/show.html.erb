<div class="profile_settings">
    <div class="round"></div>
    <div class="round"></div>
    <div class="round"></div>
</div>
<% if current_user.avatar.attached? %>
    <div class="avatar">
        <%= image_tag current_user.avatar, class: "avatar-big"%>
    </div>
    <div class="name">
        <%= current_user.username.capitalize %>  
    </div>
<% else %>
    <div class="avatar">
        <%= link_to (image_tag 'default_avatar.jpg',class: "avatar-big"), edit_user_registration_path %>
    </div>
<% end %>

<div class="line">
  <%= link_to "Edit", edit_user_registration_path, class: 'button' %>
</div>
<%= button_to "Log out", destroy_user_session_path, class: 'button', method: :delete %>

<div class="posts">
    <% @posts_by_three.each do |line| %>
        <div class="posts_line">
            <% line.each do |post| %>
                <div class="post">
                    <%= link_to (image_tag post.picture, class: "post_picture"), post %>
                </div>
            <% end %>
        </div>        
    <% end %>
</div>